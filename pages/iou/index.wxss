/* 
  借条详情
*/
.iou_data{
  margin-top: 12px;
}
.order_detail{
  padding: 16px;
}
.order_item{
  height: 80px;
  display:flex;
  align-items:center;
  padding:0 12px;
}
.item_information{
  display:flex;
  align-items:center;
  /* border-bottom:1px solid rgb(235, 235, 235); */
  height:72px;
  width:100%;
  margin-left:16px;
}
.account_information{
  display:flex;
  justify-content:space-between;
  align-items: center;
  width:100%;
}
.item_text{
  font-size:13px;
  color:rgba(0,0,0,0.5);
}
.item_right{
  text-align:right;
}
.debit,.return{
  padding:3px 6px;
  border-radius:50%;
  font-size:15px;
  font-weight:bold;
}
.debit{
  background-color:#e5f1ff;
  color:#007aff;
}
.debit_name,.return_name{
  font-size:15px;
  margin-left:10px;
}
.return{
  background-color:#fff7e5;
  color:#ffae00;
}

