/* 
  借款页面头部
*/
.iou_bg{
  background-color: #ffb341;
  width: 100%;
  height: 100px;
  border-radius: 0 0 50px 50px;
}
.iou_top{
  padding:12px;
  margin: -64px 16px 16px 16px;
  background-color: rgb(230, 89, 89);
  /* color: rgb(165, 165, 165); */
  color: #f6f6f6;
  /* box-shadow: 0px 0px 5px 0px rgb(161, 161, 161); */
  border-radius: 10px;
}
.iou_top_detail{
  font-size:13px;
}
.iou_count{
  color:#ffae00;
  font-weight:bold;
  font-size:15px;
}
.iou_money{
  margin:12px 0;
  color:#ffae00;
  font-weight:bold;
}
.iou_money span:nth-child(2){
  font-size:28px;
}
.iou_finish{
  font-size:13px;
}
.iou_fcount{
  color:#ffae00;
  font-weight:bold;
  font-size:15px;
}
.iou_unfinish{
  font-size:13px;
  margin-left:12px;
}
.iou_ucount{
  color:#ffae00;
  font-weight:bold;
  font-size:15px;
}

/* 
  条件选择
