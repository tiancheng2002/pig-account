page{
  background-color: #f3f3f3;
}
/* 
  个人信息
*/
.bg_mine{
  background-color: #ffb341;
  border-radius: 0 0 50px 50px;
  padding:0 16px 80px 16px;
  /* ffb341 */
}
.mine{
  display:flex;
  justify-content: center;
  align-items:center;
  /* background-color: white; */
  border-radius: 10px;
  padding-top: 12px;
}
.touxiang_view{
  display: flex;
  justify-content: center;
}
.mine_touxiang{
  border-radius:50%;
  overflow:hidden;
  display:block;
  height:80px;
  width:80px;
  border: 2px solid white;
  text-align: center;
}
.mine_name{
  margin-top: 10px;
  text-align: center;
}

/* 
  记账天数以及笔数
*/
.mine_account{
  width: 100%;
  display:flex;
  justify-content:space-around;
  margin-top:24px;
}
.account_text{
  text-align:center;
}
.account_information{
  font-size: 13px;
  /* color: rgba(0,0,0,0.7); */
  color: white;
}
.account_data{
  font-weight: bold;
  /* color: #ff9900; */
  color: white;
  font-size: 20px;
}

/* 
  功能模块
*/
.function{
  margin: 24px 16px;
  background-color: white;
  border-radius: 10px;
}
.function_item{
  display:flex;
  justify-content:space-between;
  height:60px;
  align-items:center;
  border-bottom:1px solid rgb(247, 247, 247);
  padding:0 12px;
}
.function_item_te{
  display:flex;
  justify-content:space-between;
  height:60px;
  align-items:center;
  border-bottom:1px solid rgb(247, 247, 247);
  position: relative;
}
.shareButton{
  position: absolute;
  width: 100%;
  height:100%;
  opacity: 0;
}
.item_information{
  display:flex;
  align-items:center;
}
.item_text{
  margin-left:12px;
}

/* 
  预算
*/
.budget{
  margin: -50px 16px 0 16px;
}
.budget_detail{
  text-align: center;
  background-color: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 80px;
  border-radius: 10px;
}
.budget_title{
  font-size: 14px;
  margin: 8px 0;
}
.budget_text{
  margin-top: 2px;
  font-size: 13px;
  color: #bbbec4;
}
.circle_view{
  border: 8px solid white;
  border-radius: 50%;
  background-color: white;
}

/* 
  分享按钮
*/
.share{
  margin-top: 80rpx!important;
  background-color: white!important;
  border: 2px solid #ff9900!important;
  color:#ff9900!important;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.block {
  width: 120px;
  height: 360px;
  background-color: #fff;
}

.editText{
  z-index: 999;
  font-size: 12px;
  position: absolute;
  text-align: center;
  width: 100%;
  bottom: 20px;
  color: #ff9900;
  text-decoration-line: underline;
}

