/* 
  非理性消费图片
*/
.consumepay_img{
  width:50px;
  height:50px;
  position:fixed;
  margin-top:6px;
  margin-left:6px;
}

/* 
  页面
*/
page{
  height: 100%;
  background-color: rgba(236, 236, 236, 0.822);
}
.detail{
  height: 100%;
}

/* 
  详情信息
*/
.account_detail{
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5px;
  background-color: white;
  margin: 5px;
  padding: 50rpx 10rpx;
}
.account_money{
  margin-top: 20px;
  text-align: center;
  font-size: 28px;
  font-weight: bold;
}
.Irrational_consumption{
  margin-top: 20rpx;
  text-align: center;
}
.Irrational_consumption_text{
  padding:10rpx 30rpx;
  background-color: pink;
  color: white;
  font-size: 12px;
  border-radius: 10px;
}
.account_detail_icon{
  font-size: 12px;
  text-align: center;
}
.account_detail_item{
  font-size: 14px;
  margin: 16px 0;
  height: 25px;
  line-height: 25px;
}
.account_detail_item.remark{
  height: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.account_detail_item.remark.img{
  display: flex;
  align-items: center;
  height: 40px;
}
.account_detail_img_div{
  display: flex;
}
.account_detail_img{
  width: 25px;
  height: 25px;
  border-radius: 5px;
}
.account_detail_bookName{
  margin-left: 6px;
}
.account_detail_action{
  border-top: 1px solid rgb(214, 214, 214);
  font-size: 12px;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
}
.detail_list{
  width: 100px;
  color: rgba(0, 0, 0, 0.5);
  margin-right: 24px;
}
.action_editor,.action_delete{
  width: 50%;
  text-align: center;
}
.action_editor{
  border-right: 1px solid rgb(214, 214, 214);
}
.editor_text{
  color: #ff9900;
}
.delete_text{
  color: #ed3f14;
}